<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Setting"/>
    <style name="Setting.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="Setting.BaseTextview">
        <item name="android:textColor">@color/text_bg</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Setting.ContentTextview">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/text_bg</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="Setting.Button">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextChoose">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#4B9DF9</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>
    <style name="Divider.Common">
        <item name="android:background">@color/divider_dark</item>
    </style>

    <!-- 添加图片 -->
    <style name="add_img">
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:src">@mipmap/img_add</item>
        <item name="android:layout_marginRight">25dip</item>
        <item name="android:layout_marginLeft">25dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dip</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#DDDDDD</item>
    </style>

    <style name="Password"/>
    <style name="Password.text">
        <item name="android:textColor">@color/text_bg</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Password.edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="Password.button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginRight">100dp</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:textColor"> @color/text_white</item>
        <item name="android:background">@drawable/bg_border_btn</item>
    </style>

</resources>
